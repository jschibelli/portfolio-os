# ================================================================
# Portfolio OS - Site App Environment Variables
# ================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!
# ================================================================

# ----------------------------------------------------------------
# REQUIRED - Core Configuration
# ----------------------------------------------------------------

# Hashnode Blog Integration (REQUIRED)
# Your Hashnode publication host (e.g., mindware.hashnode.dev)
# Get this from your Hashnode publication settings
NEXT_PUBLIC_HASHNODE_PUBLICATION_HOST=your-blog.hashnode.dev

# Node Environment (automatically set by framework)
NODE_ENV=development


# ----------------------------------------------------------------
# REQUIRED - Email Service (Contact Form)
# ----------------------------------------------------------------

# Resend API Key - Get from https://resend.com/api-keys
# Required for contact form functionality
RESEND_API_KEY=re_your_resend_api_key_here

# Verified sender email address (must be verified in Resend)
EMAIL_FROM=noreply@yourdomain.com

# Optional: Reply-to email address
EMAIL_REPLY_TO=your-email@example.com


# ----------------------------------------------------------------
# OPTIONAL - AI Features (Chatbot)
# ----------------------------------------------------------------

# OpenAI API Key - Get from https://platform.openai.com/api-keys
# Required for AI-powered chatbot
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Optional: OpenAI Model Configuration
OPENAI_ROUTER_MODEL_SMALL=gpt-4o-mini
OPENAI_ROUTER_MODEL_RESPONSES=gpt-4o-mini


# ----------------------------------------------------------------
# OPTIONAL - Google Calendar Integration (Chatbot Scheduling)
# ----------------------------------------------------------------

# Google Calendar ID (usually your Gmail address)
GOOGLE_CALENDAR_ID=your-email@gmail.com

# Google Service Account Credentials
# Get these from Google Cloud Console
GOOGLE_TYPE=service_account
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account
GOOGLE_UNIVERSE_DOMAIN=googleapis.com

# Google OAuth2 (Alternative to Service Account)
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google
GOOGLE_OAUTH_REFRESH_TOKEN=your-refresh-token

# SSL Fix for Node 20+ (set to true if needed)
FIX_SSL_ISSUES=false


# ----------------------------------------------------------------
# OPTIONAL - Caching (Redis)
# ----------------------------------------------------------------

# Upstash Redis - Get from https://upstash.com
# Provides fast caching for blog posts and API responses
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token


# ----------------------------------------------------------------
# OPTIONAL - Hashnode Publishing
# ----------------------------------------------------------------

# Hashnode API Token - For publishing blog posts
# Get from Hashnode Settings > Developer
HASHNODE_API_TOKEN=your-hashnode-api-token
HASHNODE_PUBLICATION_ID=your-publication-id


# ----------------------------------------------------------------
# OPTIONAL - Analytics
# ----------------------------------------------------------------

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics
PLAUSIBLE_API_TOKEN=your-plausible-api-token
PLAUSIBLE_SITE_ID=yourdomain.com

# Sentry Error Tracking
SENTRY_API_TOKEN=your-sentry-api-token


# ----------------------------------------------------------------
# OPTIONAL - Payment Processing
# ----------------------------------------------------------------

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret


# ----------------------------------------------------------------
# OPTIONAL - Social Media Integrations
# ----------------------------------------------------------------

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_PAGE_ID=your-facebook-page-id

# GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_TOKEN=ghp_your-github-personal-access-token


# ----------------------------------------------------------------
# OPTIONAL - Database
# ----------------------------------------------------------------

# Database URL (if using database features)
DATABASE_URL=file:./dev.db


# ----------------------------------------------------------------
# OPTIONAL - Dashboard Integration
# ----------------------------------------------------------------

# Dashboard API Configuration
DASHBOARD_API_URL=http://localhost:3001
DASHBOARD_API_SECRET=your-dashboard-api-secret


# ----------------------------------------------------------------
# OPTIONAL - Authentication & Security
# ----------------------------------------------------------------

# Auth Secrets (min 32 characters)
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-min-32-chars
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars

# Admin Credentials
AUTH_ADMIN_EMAIL=admin@example.com
AUTH_ADMIN_PASSWORD=your-secure-password-min-12-chars

# Cron Job Secret (min 32 characters)
CRON_SECRET=your-cron-secret-min-32-chars


# ----------------------------------------------------------------
# OPTIONAL - Feature Flags (Public)
# ----------------------------------------------------------------

# Enable/disable features on the frontend
NEXT_PUBLIC_FEATURE_SCHEDULING=true
NEXT_PUBLIC_FEATURE_CASE_STUDY=true
NEXT_PUBLIC_FEATURE_CLIENT_INTAKE=true


# ----------------------------------------------------------------
# OPTIONAL - Site Configuration
# ----------------------------------------------------------------

# Base URL (for absolute URLs, OG images, sitemaps)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Under Construction Mode
NEXT_PUBLIC_UNDER_CONSTRUCTION=false

# Vercel Integration
VERCEL_API_TOKEN=your-vercel-api-token


# ================================================================
