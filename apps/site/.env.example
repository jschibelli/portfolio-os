# Hashnode GraphQL Configuration (REQUIRED)
# Get your publication host from your Hashnode dashboard
# Example: If your blog is at https://mindware.hashnode.dev, then use mindware.hashnode.dev
NEXT_PUBLIC_HASHNODE_GQL_ENDPOINT=https://gql.hashnode.com/
NEXT_PUBLIC_HASHNODE_PUBLICATION_HOST=your-publication.hashnode.dev

# Database Configuration (Optional - for future features)
DATABASE_URL=postgresql://your_username:your_password@localhost:5432/your_database

# Authentication (Optional - for admin features)
AUTH_SECRET=your_super_secret_auth_key_change_this_in_production
AUTH_ADMIN_EMAIL=admin@yourdomain.com
AUTH_ADMIN_PASSWORD=your_secure_password_here

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Revalidation Secret (Optional)
REVALIDATE_SECRET=your_revalidate_secret_here

# AI Services (Optional - for chatbot features)
OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth Configuration (Optional - for calendar integration)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/google/oauth/callback

# Google Calendar Configuration (Optional)
GOOGLE_CALENDAR_ID=your_calendar_id_here
GOOGLE_OAUTH_REFRESH_TOKEN=your_refresh_token_here

# Feature Flags (Optional)
ENABLE_GOOGLE_CALENDAR=false
ENABLE_OPENAI_CHATBOT=false
ENABLE_NEWSLETTER=true
ENABLE_COMMENTS=false