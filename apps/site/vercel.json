{
  "$comment": "âœ… ACTIVE DEPLOYMENT - Portfolio OS Main Site. This is deployed via the root vercel.json. If deploying as standalone, this config will be used.",
  "buildCommand": "pnpm turbo build --filter=@mindware-blog/site",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [],
  "headers": [
    {
      "source": "/maintenance",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, s-maxage=300, stale-while-revalidate=600"
        }
      ]
    }
  ]
}