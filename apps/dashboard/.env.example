# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3003"

# Site Configuration
SITE_URL="http://localhost:3000"

# Upload Configuration (optional)
UPLOADTHING_SECRET="your-uploadthing-secret"
UPLOADTHING_APP_ID="your-uploadthing-app-id"

# ===================================
# Publishing Workflow Configuration
# ===================================

# Hashnode Integration
HASHNODE_API_TOKEN="your-hashnode-personal-access-token"
HASHNODE_PUBLICATION_ID="your-hashnode-publication-id"

# Dev.to Integration
DEVTO_API_KEY="your-devto-api-key"

# Medium Integration
MEDIUM_USER_ID="your-medium-user-id"
MEDIUM_ACCESS_TOKEN="your-medium-integration-token"

# LinkedIn Integration
LINKEDIN_ACCESS_TOKEN="your-linkedin-access-token"
LINKEDIN_AUTHOR_ID="your-linkedin-author-id"

# Queue Processor
# Set to 'true' to enable automatic scheduled publishing
ENABLE_QUEUE_PROCESSOR="false"

# ===================================
# Optional Integrations
# ===================================

# Google Analytics
GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Email Service (for notifications)
RESEND_API_KEY="your-resend-api-key"

# Redis (for caching, optional)
REDIS_URL="redis://localhost:6379"

# ===================================
# Development Settings
# ===================================

# Development port (default: 3003)
DASHBOARD_PORT="3003"

# Node Environment
NODE_ENV="development"
