{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    // Code Quality Rules
    "no-unused-vars": "off", // Turn off base rule to avoid conflicts with TypeScript rule
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error",
    
    // TypeScript Rules
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-explicit-any": "warn",
    
    // React Rules
    "react/no-unescaped-entities": "error",
    "react/jsx-key": "error",
    "react-hooks/exhaustive-deps": "warn",
    
    // Next.js Rules
    "@next/next/no-img-element": "error",
    "@next/next/no-html-link-for-pages": "error"
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}
