{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env*",
    "**/package.json",
    "**/pnpm-lock.yaml",
    "**/tsconfig.json",
    "**/next.config.js",
    "**/tailwind.config.js"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "build/**"],
      "cache": true,
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/*.json",
        "**/*.css",
        "**/*.scss",
        "**/*.md",
        "**/*.mdx",
        "**/public/**",
        "**/assets/**"
      ]
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "**/.eslintrc*",
        "**/eslint.config.*"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": [
        "**/*.test.*",
        "**/*.spec.*",
        "**/__tests__/**",
        "**/tests/**",
        "**/jest.config.*",
        "**/playwright.config.*"
      ]
    },
    "typecheck": {
      "outputs": ["tsconfig.tsbuildinfo"],
      "cache": true,
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "**/tsconfig*.json"
      ]
    }
  }
}

